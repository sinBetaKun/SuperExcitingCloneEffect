<UserControl x:Class="SuperExcitingCloneEffect.Controllers.CloneValueList.ManagedItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SuperExcitingCloneEffect.Controllers.CloneValueList"
             xmlns:local2="clr-namespace:SuperExcitingCloneEffect.Interfaces"
             xmlns:local3="clr-namespace:SuperExcitingCloneEffect.Classes"
             xmlns:resx="clr-namespace:SuperExcitingCloneEffect.Properties"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=local2:IManagedItem}"
             DataContextChanged="UserControl_DataContextChanged">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SuperExcitingCloneEffect;component/XamlDictionaries/MaterialIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="ButtonHideStyle" TargetType="Button">
                <Setter Property="Content" Value="{StaticResource Visible}"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Hide, Mode=OneWay}" Value="True">
                        <Setter Property="Content" Value="{StaticResource Invisible}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
            <local:LeftMarginConverter x:Key="LeftMarginConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="{Binding Depth, Converter={StaticResource LeftMarginConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0"
              Grid.Row="0">
            <Path x:Name="SelectedSign"
                  Visibility="Hidden"
                  VerticalAlignment="Center"
                  Fill="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                  Data="M5,30 L5,0 L15,15 Z"/>
        </Grid>
        <Border Grid.Column="1"
                Grid.Row="0"
                VerticalAlignment="Center"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <ContentControl x:Name="FolderIcon"
                                Visibility="Collapsed"
                                Content="{StaticResource Folder}"/>
                <Grid Grid.Column="1"
                      Margin="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0"
                                Margin="2,0"
                                Orientation="Horizontal">
                        <Border Grid.Column="1"
                                VerticalAlignment="Center"
                                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                                BorderThickness="1">
                            <Button Height="16" Width="16" Margin="2" Background="Transparent" BorderThickness="0"
                                    Click="Switch_Hide" Style="{StaticResource ButtonHideStyle}" />
                        </Border>
                        <TextBlock Text="{x:Static resx:TextResource.IManagedItem_NameTag}"
                                   FontWeight="Bold"
                                   Margin="4,0,0,0"
                                   VerticalAlignment="Center"/>
                        <Border BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                                BorderThickness="1"
                                Padding="2,0"
                                Margin="2,0,0,0"
                                HorizontalAlignment="Left">
                            <TextBlock Text="{Binding NameTag}"
                                       VerticalAlignment="Center"/>
                        </Border>

                    </StackPanel>
                    <Separator Grid.Row="1"
                               BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                               BorderThickness="1"
                               Margin="0,2">
                        <Separator.Style>
                            <Style TargetType="Separator">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Comment}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Comment}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Separator.Style>
                    </Separator>
                    <StackPanel Grid.Row="2"
                                Margin="2,0"
                                Orientation="Horizontal">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Comment}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Comment}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="{x:Static resx:TextResource.IManagedItem_Comment}"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <Border BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                                BorderThickness="1"
                                Padding="2,0"
                                Margin="2,0,0,0"
                                HorizontalAlignment="Left">
                            <TextBlock TextWrapping="Wrap"
                                       Text="{Binding Comment}"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
        <Button x:Name="GroupViewChangeButton"
                Grid.Row="1"
                Grid.Column="1"
                Click="GroupViewChanged"
                Visibility="Collapsed">
            <Button.Content>
                <Viewbox>
                    <Canvas Width="16" Height="8">
                        <Path x:Name="ClosedSign"
                              Opacity="0.7"
                              Visibility="Visible"
                              Fill="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}"
                              Data="M8,0 L16,8 L0,8 Z"/>
                        <Path x:Name="OpenedSign"
                              Opacity="0.7"
                              Visibility="Hidden"
                              Fill="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}"
                              Data="M8,8 L16,0 L0,0 Z"/>
                    </Canvas>
                </Viewbox>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
